{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Lab Build and Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/LAB.exe",
            "args": ["COM5", "COM6"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build lab with CMake" // Сначала запустит задачу сборки 'build'
        },
        {
            "name": "Lab Launch",
            "type": "cppdbg",
            "request": "launch",
